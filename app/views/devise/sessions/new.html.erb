<% provide(:title, 'Log in') %>

<div class="row justify-content-md-center">
  <div class="col-md-6 coffset-md-3">

    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'メールアドレス'%>
      </div>

      <div class="form-group">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'パスワード' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me, class: 'form-check-label' %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit 'ログイン', class: 'btn btn-outline-warning badge-pill pr-4 pl-4' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
