<% provide(:title, 'Sign up') %>

<div class="row justify-content-md-center">
  <div class="col-md-6 coffset-md-3">

    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control', placeholder: 'ユーザー名' %>
      </div>
    
      <div class="form-group">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'メールアドレス' %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        （<%= @minimum_password_length %> 文字以上）
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'パスワード' %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード（もう一度入力してくだい） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'パスワード（もう一度入力してくだい）' %>
      </div>

      <div class="actions">
        <%= f.submit '新規登録', class: 'btn btn-outline-warning badge-pill pr-4 pl-4' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
